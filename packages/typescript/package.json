{
  "name": "@plysrh88/oauth-sdk",
  "version": "1.0.2",
  "description": "Unified authentication SDK for TypeScript/JavaScript",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "eslint .",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "auth",
    "oauth",
    "sdk",
    "typescript",
    "github",
    "google",
    "authentication"
  ],
  "author": "Sebastian Rodriguez <ply.srh@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plysrh/oauth-sdk.git",
    "directory": "packages/typescript"
  },
  "homepage": "https://github.com/plysrh/oauth-sdk#readme",
  "bugs": {
    "url": "https://github.com/plysrh/oauth-sdk/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.4",
    "vitest": "^1.0.0"
  }
}
